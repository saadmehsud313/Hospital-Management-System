<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Hospital_Management_System.Views.ReceptionistView"
             xmlns:viewmodels="clr-namespace:Hospital_Management_System.ViewModels"
             x:DataType="viewmodels:ReceptionistViewModel"
             Title="Profile"
             Background="Wheat"
             Shell.NavBarIsVisible="False"
             >
    <ScrollView>
    <HorizontalStackLayout VerticalOptions="Start"  Background="Wheat" HeightRequest="700">
        
            <VerticalStackLayout Margin="20,20,10,10" WidthRequest="200" Background="AntiqueWhite">
            
            <Label Text="{Binding StaffName}"
                   TextColor="Black"
                   HorizontalOptions="Center" 
                   FontSize="Medium" 
                   Padding="4" 
                   Margin="20,8,25,6"/>
            <Label Text="{Binding StaffDepartment}" 
                   HorizontalOptions="Center" 
                   FontSize="Medium"
                   Padding="4" 
                   TextColor="Black"
                   Margin="20,8,25,6"/>
            <Label Text="{Binding StaffRole}" 
                   HorizontalOptions="Center" 
                   FontSize="Small"
                   Padding="4" 
                   TextColor="Black"
                   Margin="20,8,25,15"/>
            <Button Text="Profile"   Command="{Binding ToggleProfileViewCommand}" BackgroundColor="AntiqueWhite" ImageSource="profile_btn_logo.png">
                <Button.GestureRecognizers>
                    <PointerGestureRecognizer PointerEntered="OnPointerEntered" PointerExited="OnPointerExited"/>
                    
                </Button.GestureRecognizers>
                <Button.Style>
                    <Style TargetType="Button">
                            <Setter Property="TextColor" Value="#EC9C13"/>
                        <Setter Property="WidthRequest" Value="150"/>
                        <Setter Property="Padding" Value="10"/>
                        <Setter Property="Margin" Value="0,35,0,20"/>
                        
                    </Style>
                </Button.Style>
               
            </Button>
            <Button Text="Password"  Command="{Binding ToggleInfoViewCommand}" BackgroundColor="AntiqueWhite" ImageSource="change_password_logo.png">
                <Button.GestureRecognizers>
                    <PointerGestureRecognizer PointerEntered="OnPointerEntered" PointerExited="OnPointerExited"/>
                </Button.GestureRecognizers>
                <Button.Style>
                    <Style TargetType="Button">
                            <Setter Property="TextColor" Value="#EC9C13"/>
                        <Setter Property="WidthRequest" Value="150"/>
                        <Setter Property="Padding" Value="10"/>
                        <Setter Property="Margin" Value="0,10,0,20"/>

                    </Style>
                </Button.Style>
            </Button>
            <Button Text="Logout" Command="{Binding LogoutClickedCommand}" BackgroundColor="AntiqueWhite" ImageSource="logout_logo.png">
                <Button.GestureRecognizers>
                    <PointerGestureRecognizer PointerEntered="OnPointerEntered" PointerExited="OnPointerExited"/>
                </Button.GestureRecognizers>
                <Button.Style>
                        <Style TargetType="Button">
                        <Setter Property="TextColor" Value="#EC9C13"/>
                        <Setter Property="WidthRequest" Value="150"/>
                        <Setter Property="Padding" Value="10"/>
                        <Setter Property="Margin" Value="0,10,0,100"/>
                    </Style>
                </Button.Style>
            </Button>
        </VerticalStackLayout>
        <ContentView IsVisible="{Binding ProfileViewStatus}"  x:Name="PersonalInfoPage">
            <VerticalStackLayout 
               WidthRequest="900" 
               Background="AntiqueWhite" 
               Margin="20,20,8,10"
               >
               <Label Text="Personal Information" 
                   FontSize="Large"  
                   Margin="4,22,10,15" 
                   TextColor="Black" 
                   FontAttributes="Bold"/>
            
            
                <VerticalStackLayout Margin="20,10">
                    <Label 
                        Text="ID"
                        Padding="1"
                        TextColor="#C4C4C4"
                        />
                    <Border 
                         WidthRequest="400"
                         Stroke="#DBDBDB"
                         Background="#DBDBDB"
                         Padding="10,10"
                         HorizontalOptions="Start"
                         >
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="20"/>
                        </Border.StrokeShape>
                        <Label Text="{Binding StaffId}"
                               TextColor="SandyBrown"
                               FontSize="18"/>
                    </Border>
                </VerticalStackLayout>

                <HorizontalStackLayout
                                Spacing="20"
                                Margin="20"
                                >
                
                <VerticalStackLayout >
                    <Label Text="First Name"
                           Padding="1"
                           TextColor="#C4C4C4"
                           />
                    <Border WidthRequest="400"
                            Stroke="#DBDBDB"
                            Background="#DBDBDB"
                            Padding="10,10"
                            HorizontalOptions="Fill"
                            >
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="20"/>
                        </Border.StrokeShape>
                        <Label Text="{Binding StaffFirstName}"
                               TextColor="SandyBrown"
                               FontSize="18"/>
                    </Border>
                </VerticalStackLayout>

                <VerticalStackLayout>
                    <Label Text="Last Name"
                    Padding="1"
                    TextColor="#C4C4C4"
                    />
                    <Border WidthRequest="400"
                        Stroke="#DBDBDB"
                        Background="#DBDBDB"
                        Padding="10,10"
                        HorizontalOptions="Fill"
                        >
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="20"/>
                        </Border.StrokeShape>
                        <Label Text="{Binding StaffLastName}"
                               TextColor="SandyBrown"
                               FontSize="18"/>
                    </Border>
                </VerticalStackLayout>
            </HorizontalStackLayout>
            <VerticalStackLayout Margin="20,10">
                <Label 
                      Text="Email Address"
                      Padding="1"
                      TextColor="#C4C4C4"
                      />
                <Border 
                      WidthRequest="800"
                      Stroke="#DBDBDB"
                      Background="#DBDBDB"
                      Padding="10,10"
                      HorizontalOptions="Start"
                      >
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="20"/>
                    </Border.StrokeShape>
                    <Label Text="{Binding StaffEmail}"
                           TextColor="SandyBrown"
                           FontSize="18"/>
                </Border>
            </VerticalStackLayout>

          
            <HorizontalStackLayout
                Spacing="20"
                Margin="20"
                >
                <VerticalStackLayout >
                    <Label Text="Phone Number"
                            Padding="1"
                            TextColor="#C4C4C4"
                            />
                    <Border WidthRequest="400"
                            Stroke="#DBDBDB"
                            Background="#DBDBDB"
                            Padding="10,10"
                            HorizontalOptions="Fill"
                            >
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="20"/>
                        </Border.StrokeShape>
                        <Label Text="{Binding StaffPhoneNumber}"
                            TextColor="SandyBrown"
                            FontSize="18"/>
                    </Border>
                </VerticalStackLayout>

                <VerticalStackLayout>
                    <Label Text="Hire Date"
                           Padding="1"
                           TextColor="#C4C4C4"
                           />
                    <Border WidthRequest="400"
                            Stroke="#DBDBDB"
                            Background="#DBDBDB"
                            Padding="10,10"
                            HorizontalOptions="Fill"
                            >
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="20"/>
                        </Border.StrokeShape>
                        <Label Text="{Binding StaffHireDate}"
                               TextColor="SandyBrown"
                               FontSize="18"/>
                    </Border>
                </VerticalStackLayout>
            </HorizontalStackLayout>
            
                <VerticalStackLayout Margin="20,10">
                    
                    <Label Text="Active Status"
                           Padding="1"
                           TextColor="#C4C4C4"
                           />
                    
                    <Border WidthRequest="400"
                           Stroke="#DBDBDB"
                           Background="#DBDBDB"
                           Padding="10,10"
                           HorizontalOptions="Start"
                           >
                        
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="20"/>
                        </Border.StrokeShape>
                        
                        <Label Text="{Binding StaffStatus}"
                           TextColor="SandyBrown"
                           FontSize="18"/>
                        
                    </Border>
                </VerticalStackLayout>


            </VerticalStackLayout>
            
      </ContentView>
        
        
        <ContentView IsVisible="{Binding InfoViewState}" x:Name="LoginInfoPage">
            <VerticalStackLayout 
                        WidthRequest="900" 
                        Background="AntiqueWhite" 
                        Margin="20,20,8,10"
                         >


                <Label Text="Login Information" 
                       FontSize="Large"  
                       Margin="4,22,10,15" 
                       TextColor="Black" 
                       FontAttributes="Bold"/>


                <VerticalStackLayout Margin="20,10">
                    <Label 
                        Text="User ID"
                        Padding="1"
                        TextColor="#C4C4C4"
                        />
                    <Border 
                          WidthRequest="400"
                          Stroke="#DBDBDB"
                          Background="#DBDBDB"
                          Padding="10,10"
                          HorizontalOptions="Start"
                          >
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="20"/>
                        </Border.StrokeShape>
                        <Label Text="{Binding UserId}"
                               FontSize="18"/>
                    </Border>
                </VerticalStackLayout>

                <HorizontalStackLayout
                          Spacing="20"
                          Margin="20"
                          >

                    <VerticalStackLayout >
                        <Label Text="User Name"
                               Padding="1"
                               TextColor="#C4C4C4"
                               />
                        <Border WidthRequest="400"
                                Stroke="#DBDBDB"
                                Background="#DBDBDB"
                                Padding="10,10"
                                HorizontalOptions="Fill"
                                >
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="20"/>
                            </Border.StrokeShape>
                            <Label Text="{Binding UserName}"
                                   FontSize="18"/>
                        </Border>
                    </VerticalStackLayout>

                    <VerticalStackLayout>
                        <Label Text="Password"
                                Padding="1"
                                TextColor="#C4C4C4"
                                />
                        <Border WidthRequest="400"
                                Stroke="#DBDBDB"
                                Background="#DBDBDB"
                                Padding="10,10"
                                HorizontalOptions="Fill"
                                >
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="20"/>
                            </Border.StrokeShape>
                            <Label Text="{Binding UserPassword}"
                                   FontSize="18"/>
                        </Border>
                    </VerticalStackLayout>
                </HorizontalStackLayout>
                <VerticalStackLayout Margin="20,10">
                    <Label Text="Email Address"
                           Padding="1"
                           TextColor="#C4C4C4"
                            />
                    <Border 
                           WidthRequest="800"
                           Stroke="#DBDBDB"
                           Background="#DBDBDB"
                           Padding="10,10"
                           HorizontalOptions="Start"
                           >
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="20"/>
                        </Border.StrokeShape>
                        <Label Text="{Binding StaffEmail}"
                               
                               FontSize="18"/>
                    </Border>
                </VerticalStackLayout>
                
                <HorizontalStackLayout HorizontalOptions="End" Margin="20,0,70,20" Spacing="20">
                    <Button Text="Discard Change"  Background="AntiqueWhite">
                        
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="TextColor" Value="#EC9C13"/>
                                <Setter Property="WidthRequest" Value="150"/>
                                <Setter Property="Padding" Value="10"/>
                                <Setter Property="Margin" Value="0,35,0,20"/>
                                <Setter Property="BorderWidth" Value="1"/>
                                <Setter Property="BorderColor" Value="#EC9C13"/>
                            </Style>
                        </Button.Style>

                    </Button>
                    <Button Text="Change Password" BackgroundColor="AntiqueWhite">
                        <Button.GestureRecognizers>
                            <PointerGestureRecognizer PointerEntered="OnPointerEntered" PointerExited="OnPointerExited"/>

                        </Button.GestureRecognizers>
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="TextColor" Value="#EC9C13"/>
                                <Setter Property="WidthRequest" Value="250"/>
                                <Setter Property="Padding" Value="5,0,1,0"/>
                                <Setter Property="Margin" Value="0,35,0,20"/>
                                <Setter Property="BorderColor" Value="#EC9C13"/>
                                <Setter Property="BorderWidth" Value="1"/>

                                </Style>
                        </Button.Style>

                    </Button>

                </HorizontalStackLayout>
            </VerticalStackLayout>
        </ContentView>

        
        
    </HorizontalStackLayout>

    </ScrollView>
</ContentPage>