<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Hospital_Management_System.Views.ReceptionistView"
             xmlns:viewmodels="clr-namespace:Hospital_Management_System.ViewModels"
             x:DataType="viewmodels:ReceptionistViewModel"
             Title="Profile"
             Background="#F5F7FA"
             Shell.NavBarIsVisible="False">
    <ScrollView>
        <HorizontalStackLayout VerticalOptions="Start" Background="#F5F7FA" HeightRequest="700">

            <!-- Sidebar Navigation -->
            <VerticalStackLayout Margin="20" WidthRequest="280" Background="White" Padding="20">
                <Border StrokeShape="RoundRectangle 60" 
                        WidthRequest="120" 
                        HeightRequest="120" 
                        HorizontalOptions="Center"
                        Margin="0,20,0,10"
                        Stroke="#4A90E2"
                        StrokeThickness="3"
                        Background="#E8F4FF">
                    <Label Text="{Binding StaffName, StringFormat='{0:substring(0,1)}'}"
                           TextColor="#4A90E2"
                           FontSize="30"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"/>
                </Border>

                <Label Text="{Binding StaffName}"
                       TextColor="#2C3E50"
                       HorizontalOptions="Center" 
                       FontSize="20" 
                       FontAttributes="Bold"
                       Margin="0,10,0,5"/>

                <Label Text="{Binding StaffRole}" 
                       HorizontalOptions="Center" 
                       FontSize="14"
                       TextColor="#7F8C8D"
                       Margin="0,0,0,5"/>

                <Border StrokeShape="RoundRectangle 15"
                        Background="#E8F4FF"
                        Padding="10,5"
                        HorizontalOptions="Center"
                        Margin="0,5,0,20">
                    <Label Text="{Binding StaffDepartment}" 
                           HorizontalOptions="Center" 
                           FontSize="12"
                           TextColor="#4A90E2"
                           FontAttributes="Bold"/>
                </Border>

                <BoxView Color="#E1E8ED" HeightRequest="1" Margin="0,10,0,20"/>

                <Button Text="Profile" Command="{Binding ToggleProfileViewCommand}" 
                        BackgroundColor="Transparent" 
                        ImageSource="profile_btn_logo.png"
                        Margin="0,10">
                    <Button.GestureRecognizers>
                        <PointerGestureRecognizer PointerEntered="OnPointerEntered" PointerExited="OnPointerExited"/>
                    </Button.GestureRecognizers>
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="TextColor" Value="#2C3E50"/>
                            <Setter Property="FontSize" Value="16"/>
                            <Setter Property="Padding" Value="15,12"/>
                            <Setter Property="CornerRadius" Value="10"/>
                            <Setter Property="BorderColor" Value="Transparent"/>
                        </Style>
                    </Button.Style>
                </Button>

                <Button Text="Password" Command="{Binding ToggleInfoViewCommand}" 
                        BackgroundColor="Transparent" 
                        ImageSource="change_password_logo.png"
                        Margin="0,5">
                    <Button.GestureRecognizers>
                        <PointerGestureRecognizer PointerEntered="OnPointerEntered" PointerExited="OnPointerExited"/>
                    </Button.GestureRecognizers>
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="TextColor" Value="#2C3E50"/>
                            <Setter Property="FontSize" Value="16"/>
                            <Setter Property="Padding" Value="15,12"/>
                            <Setter Property="CornerRadius" Value="10"/>
                            <Setter Property="BorderColor" Value="Transparent"/>
                        </Style>
                    </Button.Style>
                </Button>

                <BoxView Color="#E1E8ED" HeightRequest="1" Margin="0,20,0,10"/>

                <Button Text="Logout" Command="{Binding LogoutClickedCommand}" 
                        BackgroundColor="Transparent" 
                        ImageSource="logout_logo.png"
                        Margin="0,10">
                    <Button.GestureRecognizers>
                        <PointerGestureRecognizer PointerEntered="OnPointerEntered" PointerExited="OnPointerExited"/>
                    </Button.GestureRecognizers>
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="TextColor" Value="Black"/>
                            <Setter Property="FontSize" Value="16"/>
                            <Setter Property="Padding" Value="15,12"/>
                            <Setter Property="CornerRadius" Value="10"/>
                            <Setter Property="BorderColor" Value="Transparent"/>
                        </Style>
                    </Button.Style>
                </Button>
            </VerticalStackLayout>

            <!-- Personal Information View -->
            <ContentView IsVisible="{Binding ProfileViewStatus}" x:Name="PersonalInfoPage">
                <VerticalStackLayout WidthRequest="900" Background="Transparent" Margin="20,20,20,10">

                    <Border StrokeShape="RoundRectangle 20" 
                            Background="White" 
                            Padding="40"
                            StrokeThickness="0">
                        <VerticalStackLayout>
                            <HorizontalStackLayout Spacing="10" Margin="0,0,0,30">
                                <BoxView Color="#4A90E2" WidthRequest="4" HeightRequest="32" CornerRadius="2"/>
                                <Label Text="Personal Information" 
                                       FontSize="28"
                                       TextColor="#2C3E50" 
                                       FontAttributes="Bold"
                                       VerticalOptions="Center"/>
                            </HorizontalStackLayout>

                            <!-- ID Field -->
                            <VerticalStackLayout Margin="0,0,0,20">
                                <Label Text="Staff ID" 
                                       FontSize="12" 
                                       TextColor="#7F8C8D"
                                       FontAttributes="Bold"
                                       Margin="0,0,0,8"/>
                                <Border StrokeShape="RoundRectangle 12"
                                        WidthRequest="400"
                                        Stroke="#E1E8ED"
                                        Background="#F8FAFB"
                                        Padding="16,14"
                                        HorizontalOptions="Start">
                                    <Label Text="{Binding StaffId}"
                                           TextColor="#2C3E50"
                                           FontSize="16"/>
                                </Border>
                            </VerticalStackLayout>

                            <!-- Name Fields -->
                            <HorizontalStackLayout Spacing="20" Margin="0,0,0,20">
                                <VerticalStackLayout>
                                    <Label Text="First Name" 
                                           FontSize="12" 
                                           TextColor="#7F8C8D"
                                           FontAttributes="Bold"
                                           Margin="0,0,0,8"/>
                                    <Border StrokeShape="RoundRectangle 12"
                                            WidthRequest="390"
                                            Stroke="#E1E8ED"
                                            Background="#F8FAFB"
                                            Padding="16,14">
                                        <Label Text="{Binding StaffFirstName}"
                                               TextColor="#2C3E50"
                                               FontSize="16"/>
                                    </Border>
                                </VerticalStackLayout>

                                <VerticalStackLayout>
                                    <Label Text="Last Name" 
                                           FontSize="12" 
                                           TextColor="#7F8C8D"
                                           FontAttributes="Bold"
                                           Margin="0,0,0,8"/>
                                    <Border StrokeShape="RoundRectangle 12"
                                            WidthRequest="390"
                                            Stroke="#E1E8ED"
                                            Background="#F8FAFB"
                                            Padding="16,14">
                                        <Label Text="{Binding StaffLastName}"
                                               TextColor="#2C3E50"
                                               FontSize="16"/>
                                    </Border>
                                </VerticalStackLayout>
                            </HorizontalStackLayout>

                            <!-- Email Field -->
                            <VerticalStackLayout Margin="0,0,0,20">
                                <Label Text="Email Address" 
                                       FontSize="12" 
                                       TextColor="#7F8C8D"
                                       FontAttributes="Bold"
                                       Margin="0,0,0,8"/>
                                <Border StrokeShape="RoundRectangle 12"
                                        WidthRequest="800"
                                        Stroke="#E1E8ED"
                                        Background="#F8FAFB"
                                        Padding="16,14"
                                        HorizontalOptions="Start">
                                    <Label Text="{Binding StaffEmail}"
                                           TextColor="#2C3E50"
                                           FontSize="16"/>
                                </Border>
                            </VerticalStackLayout>

                            <!-- Phone and Hire Date -->
                            <HorizontalStackLayout Spacing="20" Margin="0,0,0,20">
                                <VerticalStackLayout>
                                    <Label Text="Phone Number" 
                                           FontSize="12" 
                                           TextColor="#7F8C8D"
                                           FontAttributes="Bold"
                                           Margin="0,0,0,8"/>
                                    <Border StrokeShape="RoundRectangle 12"
                                            WidthRequest="390"
                                            Stroke="#E1E8ED"
                                            Background="#F8FAFB"
                                            Padding="16,14">
                                        <Label Text="{Binding StaffPhoneNumber}"
                                               TextColor="#2C3E50"
                                               FontSize="16"/>
                                    </Border>
                                </VerticalStackLayout>

                                <VerticalStackLayout>
                                    <Label Text="Hire Date" 
                                           FontSize="12" 
                                           TextColor="#7F8C8D"
                                           FontAttributes="Bold"
                                           Margin="0,0,0,8"/>
                                    <Border StrokeShape="RoundRectangle 12"
                                            WidthRequest="390"
                                            Stroke="#E1E8ED"
                                            Background="#F8FAFB"
                                            Padding="16,14">
                                        <Label Text="{Binding StaffHireDate}"
                                               TextColor="#2C3E50"
                                               FontSize="16"/>
                                    </Border>
                                </VerticalStackLayout>
                            </HorizontalStackLayout>

                            <!-- Active Status -->
                            <VerticalStackLayout Margin="0,0,0,0">
                                <Label Text="Active Status" 
                                       FontSize="12" 
                                       TextColor="#7F8C8D"
                                       FontAttributes="Bold"
                                       Margin="0,0,0,8"/>
                                <Border StrokeShape="RoundRectangle 12"
                                        WidthRequest="200"
                                        Stroke="#27AE60"
                                        Background="#E8F8F5"
                                        Padding="16,14"
                                        HorizontalOptions="Start">
                                    <Label Text="{Binding StaffStatus}"
                                           TextColor="#27AE60"
                                           FontSize="16"
                                           FontAttributes="Bold"/>
                                </Border>
                            </VerticalStackLayout>
                        </VerticalStackLayout>
                    </Border>
                </VerticalStackLayout>
            </ContentView>

            <!-- Login Information View -->
            <ContentView IsVisible="{Binding InfoViewState}" x:Name="LoginInfoPage">
                <VerticalStackLayout WidthRequest="900" Background="Transparent" Margin="20,20,20,10">

                    <Border StrokeShape="RoundRectangle 20" 
                            Background="White" 
                            Padding="40"
                            StrokeThickness="0">
                        <VerticalStackLayout>
                            <HorizontalStackLayout Spacing="10" Margin="0,0,0,30">
                                <BoxView Color="#4A90E2" WidthRequest="4" HeightRequest="32" CornerRadius="2"/>
                                <Label Text="Login Information" 
                                       FontSize="28"
                                       TextColor="#2C3E50" 
                                       FontAttributes="Bold"
                                       VerticalOptions="Center"/>
                            </HorizontalStackLayout>

                            <!-- User ID Field -->
                            <VerticalStackLayout Margin="0,0,0,20">
                                <Label Text="User ID" 
                                       FontSize="12" 
                                       TextColor="#7F8C8D"
                                       FontAttributes="Bold"
                                       Margin="0,0,0,8"/>
                                <Border StrokeShape="RoundRectangle 12"
                                        WidthRequest="400"
                                        Stroke="#E1E8ED"
                                        Background="#F8FAFB"
                                        Padding="16,14"
                                        HorizontalOptions="Start">
                                    <Label Text="{Binding UserId}"
                                           TextColor="#2C3E50"
                                           FontSize="16"/>
                                </Border>
                            </VerticalStackLayout>

                            <!-- Username and Password -->
                            <HorizontalStackLayout Spacing="20" Margin="0,0,0,20">
                                <VerticalStackLayout>
                                    <Label Text="User Name" 
                                           FontSize="12" 
                                           TextColor="#7F8C8D"
                                           FontAttributes="Bold"
                                           Margin="0,0,0,8"/>
                                    <Border StrokeShape="RoundRectangle 12"
                                            WidthRequest="390"
                                            Stroke="#E1E8ED"
                                            Background="#F8FAFB"
                                            Padding="16,14">
                                        <Label Text="{Binding UserName}"
                                               TextColor="#2C3E50"
                                               FontSize="16"/>
                                    </Border>
                                </VerticalStackLayout>

                                <VerticalStackLayout>
                                    <Label Text="Password" 
                                           FontSize="12" 
                                           TextColor="#7F8C8D"
                                           FontAttributes="Bold"
                                           Margin="0,0,0,8"/>
                                    <Border StrokeShape="RoundRectangle 12"
                                            WidthRequest="390"
                                            Stroke="#E1E8ED"
                                            Background="#F8FAFB"
                                            Padding="16,14">
                                        <Label Text="{Binding UserPassword}"
                                               TextColor="#2C3E50"
                                               FontSize="16"/>
                                    </Border>
                                </VerticalStackLayout>
                            </HorizontalStackLayout>
                            <!--New Password and Confirm Password-->
                            <HorizontalStackLayout Spacing="20" Margin="0,0,0,20">
                                <VerticalStackLayout>
                                    <Label Text="New Password" 
                                           FontSize="12" 
                                           TextColor="#7F8C8D"
                                           FontAttributes="Bold"
                                           Margin="0,0,0,8"/>
                                    <Border StrokeShape="RoundRectangle 12"
                                            WidthRequest="390"
                                            Stroke="#E1E8ED"
                                            Background="#F8FAFB"
                                            Padding="0">
                                        <Entry Text="{Binding NewPassword}"
                                                TextColor="#2C3E50"
                                               Placeholder="New Password"
                                                FontSize="16"/>
                                    </Border>
                                </VerticalStackLayout>

                                <VerticalStackLayout>
                                    <Label Text="Confirm Password" 
                                            FontSize="12" 
                                            TextColor="#7F8C8D"
                                            FontAttributes="Bold"
                                            Margin="0,0,0,8"/>
                                    <Border StrokeShape="RoundRectangle 12"
                                            WidthRequest="390"
                                            Stroke="#E1E8ED"
                                            Background="#F8FAFB"
                                            Padding="0,0">
                                    <Entry Text="{Binding ConfirmPassword}"
                                           Placeholder="Confirm Password"    
                                           TextColor="#2C3E50"
                                               FontSize="16"/>
                                    </Border>
                                </VerticalStackLayout>
                            </HorizontalStackLayout>

                            <!-- Email Field -->
                            <VerticalStackLayout Margin="0,0,0,30">
                                <Label Text="Email Address" 
                                       FontSize="12" 
                                       TextColor="#7F8C8D"
                                       FontAttributes="Bold"
                                       Margin="0,0,0,8"/>
                                <Border StrokeShape="RoundRectangle 12"
                                        WidthRequest="800"
                                        Stroke="#E1E8ED"
                                        Background="#F8FAFB"
                                        Padding="16,14"
                                        HorizontalOptions="Start">
                                    <Label Text="{Binding StaffEmail}"
                                           TextColor="#2C3E50"
                                           FontSize="16"/>
                                </Border>
                            </VerticalStackLayout>

                            <!-- Action Buttons -->
                            <HorizontalStackLayout HorizontalOptions="End" Spacing="15">
                                <Button Text="Discard Changes" Background="White">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="TextColor" Value="#7F8C8D"/>
                                            <Setter Property="FontSize" Value="15"/>
                                            <Setter Property="WidthRequest" Value="160"/>
                                            <Setter Property="Padding" Value="20,12"/>
                                            <Setter Property="CornerRadius" Value="10"/>
                                            <Setter Property="BorderWidth" Value="2"/>
                                            <Setter Property="BorderColor" Value="#E1E8ED"/>
                                        </Style>
                                    </Button.Style>
                                </Button>

                                <Button Text="Change Password" Command="{Binding UpdateProfileCommand}">
                                    <Button.GestureRecognizers>
                                        <PointerGestureRecognizer PointerEntered="OnPointerEntered" PointerExited="OnPointerExited"/>
                                    </Button.GestureRecognizers>
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="TextColor" Value="White"/>
                                            <Setter Property="FontSize" Value="15"/>
                                            <Setter Property="FontAttributes" Value="Bold"/>
                                            <Setter Property="WidthRequest" Value="180"/>
                                            <Setter Property="Padding" Value="20,12"/>
                                            <Setter Property="CornerRadius" Value="10"/>
                                            <Setter Property="BorderWidth" Value="0"/>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </HorizontalStackLayout>
                        </VerticalStackLayout>
                    </Border>
                </VerticalStackLayout>
            </ContentView>

        </HorizontalStackLayout>
    </ScrollView>
</ContentPage>