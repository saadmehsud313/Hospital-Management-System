<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Hospital_Management_System.Views.LoginPage"
             xmlns:viewmodels="clr-namespace:Hospital_Management_System.ViewModels"
             x:DataType="viewmodels:LoginViewModel"
             
             BackgroundColor="#F0FFF0" 
             Shell.NavBarIsVisible="False"
             Shell.FlyoutBehavior="Disabled">

    <Shell.BackButtonBehavior>
        <BackButtonBehavior IsVisible="False" IsEnabled="False"/>
    </Shell.BackButtonBehavior>

    <Grid RowDefinitions="*,Auto,*"
          HorizontalOptions="FillAndExpand" 
          VerticalOptions="FillAndExpand">

        <Border Grid.Row="1" 
                WidthRequest="350" 
                Padding="40" 
                BackgroundColor="White"
                HorizontalOptions="Center" 
                VerticalOptions="Center">

            <Border.StrokeShape>
                <RoundRectangle CornerRadius="15"/>
            </Border.StrokeShape>

            <Border.Shadow>
                <Shadow Brush="Gray" Opacity="0.4" Offset="5,5" Radius="10"/>
            </Border.Shadow>

            <VerticalStackLayout Spacing="20">

                <Label Text="Welcome Back" 
                       FontSize="32" 
                       FontAttributes="Bold" 
                       TextColor="#DA70D6"  HorizontalOptions="Center" />

                <Label Text="Hospital Management System" 
                       FontSize="16" 
                       TextColor="#7F8C8D" 
                       HorizontalOptions="Center" 
                       Margin="0,-10,0,10"/>

                <Entry x:Name="usernameEntry" 
                       Placeholder="Email Address" 
                       Text="{Binding EmailEntry}" 
                       WidthRequest="280" 
                       Margin="0,5,0,0" 
                       FontSize="16"
                       PlaceholderColor="#7F8C8D"
                       TextColor="#2C3E50"
                       BackgroundColor="#E0FFFF" HeightRequest="50"
                       ClearButtonVisibility="WhileEditing"/>

                <Entry x:Name="passwordEntry" 
                       Placeholder="Password" 
                       IsPassword="True" 
                       Text="{Binding PasswordEntry}" 
                       WidthRequest="280" 
                       Margin="0,5,0,0" 
                       FontSize="16"
                       PlaceholderColor="#7F8C8D"
                       TextColor="#2C3E50"
                       BackgroundColor="#E0FFFF"  HeightRequest="50"
                       ClearButtonVisibility="WhileEditing"/>

                <Label Text="{Binding LoginLabel}" 
                       TextColor="#D9534F"  FontAttributes="Bold"
                       HorizontalOptions="Center" 
                       Margin="0,0,0,5"/>

                <ActivityIndicator IsVisible="{Binding IsBusy}" 
                                   IsRunning="{Binding IsBusy}" 
                                   Color="#DA70D6" />

                <Button Text="L O G I N" 
                        Command="{Binding LoginClickedCommand}" 
                        WidthRequest="280" 
                        HeightRequest="55" 
                        Margin="0,10,0,0" 
                        BackgroundColor="#FFB93D"  TextColor="White"
                        CornerRadius="10"
                        FontAttributes="Bold"
                        FontSize="18">

                    <Button.GestureRecognizers>
                        <PointerGestureRecognizer PointerEntered="OnPointerEntered" PointerExited="OnPointerExited"/>
                    </Button.GestureRecognizers>
                </Button>

            </VerticalStackLayout>
        </Border>
    </Grid>
</ContentPage>